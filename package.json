{
  "name": "capacitor-thermal-printer",
  "version": "0.0.1",
  "description": "High-speed, reliable bluetooth ESC thermal printer and encoder Capacitor plugin.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/libs/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "ios/Bridging-Header.h",
    "BluetoothPrint.podspec"
  ],
  "author": "Malik12tree",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Malik12tree/capacitor-thermal-printer.git"
  },
  "bugs": {
    "url": "https://github.com/Malik12tree/capacitor-thermal-printer/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "bluetooth",
    "esc",
    "thermal",
    "printer",
    "encoder",
    "android",
    "ios"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint src/ --ext ts",
    "prettier": "prettier \"src/**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docs": "npx typedoc",
    "build": "npm run clean && npm run docs && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@ionic/swiftlint-config": "^1.1.2",
    "@types/node": "^22.7.7",
    "eslint": "^7.11.0",
    "prettier": "~2.3.0",
    "prettier-plugin-java": "~1.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "swiftlint": "^1.0.1",
    "typedoc": "^0.26.10",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}